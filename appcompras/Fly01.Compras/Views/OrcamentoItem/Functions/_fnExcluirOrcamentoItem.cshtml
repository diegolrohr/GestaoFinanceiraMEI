<script>
    function fnExcluirOrcamentoItem(idRecord) {
        $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir este registro?", "fnExcluirOrcamentoItemConfirmed(\"" + idRecord + "\")");
    }
    function fnExcluirOrcamentoItemConfirmed(idRecord) {
        $('body').removeClass('loaded');
        if (idRecord) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "OrcamentoItem")",
                data: { id: idRecord },
                success: function (data) {
                    $('body').addClass('loaded');
                    if (data.success) {
                        $$$.toast("Excluído com sucesso.", "success");
                        $$$._.dtOrcamentoItens.refresh();
                    }
                    else {
                        $$$.toast(data.message, "error");
                    }
                },
                error: function (jXHR, textStatus, errorThrown) {
                    $('body').addClass('loaded');
                    $$$.toast(textStatus, "error");
                }
            });
        }
    }
</script>