<script>
    function fnRemoveCertificado() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("RemoveCertificados", "CertificadoDigital")",
            data: {},
            success: function (response) {
                if (response.success) {
                    $$$.toast("Certificado removido com sucesso!", "success");
                    $("#id").val("");
                }
                else {
                    $$$.toast(response.message, "error");
                }
            },
            error: function (jqxhr, textStatus, errorThrown) {
                $$$.toast(errorThrown, "error");
            }
        });

        $$$._.fly01frmCertificadoDigital.refresh();
        $('#fly01frm').trigger("reset");
    }
</script>
