<script>
    @Html.Partial("Functions/_fnMain");

    function fnChangeFornecedor() {
        if ($("#fornecedorNome").val() === "") {
            $("#atualizaDadosFornecedorField").hide();
            $("#novoFornecedorField").show();
        } else {
            $("#atualizaDadosFornecedorField").show();
            $("#novoFornecedorField").hide();
        }
    }
</script>