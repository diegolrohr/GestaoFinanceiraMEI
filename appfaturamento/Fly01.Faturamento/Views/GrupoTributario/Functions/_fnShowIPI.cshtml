<script>
    function fnShowIPI() {
        //Se ha calculo de IPI (checked), habilite os campos relacionados
        if ($('#calculaIpi:checked').val() == "true") {
            $('select#tipoTributacaoIPI').removeAttr('disabled');
            $('select#tipoTributacaoIPI').material_select();
            $('input#aplicaFreteBaseIpi').removeAttr('disabled');
            $('input#aplicaDespesaBaseIpi').removeAttr('disabled');
            if ($('select#tipoTributacaoIPI').val() == null) {// Garante sempre um valor ao habilitar campo
                $('select#tipoTributacaoIPI').val("SaidaTributada");
            }
        }
        else {
            //Se nao ha calculo de IPI, desabilite os campos relacionados
            $('select#tipoTributacaoIPI').attr('disabled', 'disabled');
            $('select#tipoTributacaoIPI').material_select();
            $('input#aplicaFreteBaseIpi').attr('disabled', 'disabled');
            $('input#aplicaDespesaBaseIpi').attr('disabled', 'disabled');
        }
    }
</script>