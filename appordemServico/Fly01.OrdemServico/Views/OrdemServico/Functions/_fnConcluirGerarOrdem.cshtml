<script>
    function fnConcluirGerarOrdem(idRecord) {
        $$$.confirm("Confirmar Encerramento", "Deseja realmente concluir esta ordem e gerar uma Pedido de Venda? Não será mais possível editar/excluir", "fnConcluirGerarOrdemConfirmed(\"" + idRecord + "\")");
    }
    function fnConcluirGerarOrdemConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("ConcluirOrdem", "OrdemServico")",
            dataType: 'json',
            data: { id: idRecord, geraOrdemVenda: true },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Ordem concluída com sucesso e Pedido de Venda gerada!", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>