<script>
    function fnDayClick(date) {
        var view = $('#calendar').fullCalendar('getView');
        if (view.name != 'month') {
            let a = date.format("DD-MM-YYYY");
            let b = date.format("HH:00");
            $$$.go("@Url.Action("FormOrdemServico", "OrdemServico")" + "?dataEntrega=" + a.toString() + "&horarioEntrega=" + b.toString());       
        }
        else {
            let a = date.format();
            $$$.go("@Url.Action("ListOrdemServico", "OrdemServico")" + "?dtInicio=" + a.toString() + "&dtFinal=" + a.toString());
        }
    }
</script>