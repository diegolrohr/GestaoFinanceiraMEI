<script>
    @Html.Partial("Functions/_fnMain");

    function fnSendManyMails() {
        let emailToSend = $$$._.dtBoletos.context[0].json.data[0].contaReceber_pessoa_email;
        let idContaBancaria = $$$._.dtBoletos.context[0].json.data[0].contaBancariaId;

        $("#dtBoletos").loading("start");
        $.ajax({
            type: "POST",
            url: '@Url.Action("ModalConfigEmail", "Cnab")',
            data: {email: emailToSend, contaBancariaId: idContaBancaria },
            success: function (retorno) {
                if (retorno !== null) {
                    $$$.modal(retorno);
                }

                setTimeout(function () {
                    $$$._.dtBoletos.refresh();
                    $("#dtBoletos").loading("stop");
                }, 5000);
            }
        });
    }
</script>