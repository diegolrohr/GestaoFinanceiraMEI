<script>
    function fnAtualizarStatusCartaCorrecao() {
        var idNotaFiscal = window.location.href.substr(window.location.href.lastIndexOf('/') + 1);

        fly01.loading.start();
        $.ajax({
            url: '@Url.Action("AtualizaStatus")',
            type: "GET",
            data: { idNotaFiscal: idNotaFiscal }
        })
        .done(function (data) {
            fly01.loading.stop();
            if (data.message) {
                fly01.fn.submitErrorHandler(null, data.message);
            } else {
                fly01._.fly01dt.refresh();
            }
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
            fly01.toast(err, "error");
            fly01.loading.stop();
        });
    }
</script>