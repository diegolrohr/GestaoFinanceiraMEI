<script>
    function fnAtualizaValorAcumulado(valorAcumulado) {
        $('#contasFinanceirasIds').val(rows_selected);

        if (valorAcumulado < 0.01)
            $('#valorAcumulado').val(0);
        else
            $('#valorAcumulado').val(valorAcumulado);

        renegociacaoCalculaValorFinal();
        $$$.fn.updateTextFields();
    }

    function CallLoadTitulosAbertos() {
        //exibe para ver que não tem títulos
        $('#selecaoTitulosLabelField').show();
        $('#datatableSelecaoTitulos_wrapper').show();
        $$$._.datatableSelecaoTitulos.selected = [];
        $$$._.datatableSelecaoTitulos.refresh();
        exibeCampos();
        $('#save').removeAttr('disabled');
    }

    function fnListaTitulosCR() {
        limpaCampos();
        if ($('#renegociacaoPessoaId').val().length > 0) {
            CallLoadTitulosAbertos();
        }
        else {
            $$$.toast("Informe o cliente.", 'error');
        }
    }
</script>