<script>
    function fnChangeNCM(event, data) {        
        $('body').removeClass('loaded');
        var ncmId = data.item.id;
        var index = data.item.detail.indexOf("IPI: ");
        var alquiotaIpi = data.item.detail.substring(index, data.item.detail.length);
        $("#aliquotaIpi").val(alquiotaIpi);
        $("#cestId").val("");
        $("#cestDescricao").val("");

        if (ncmId == "") {
            $('input#cestId').attr('disabled', 'disabled');;
            $('input#cestDescricao').attr('disabled', 'disabled');
        }
        else {
            $('input#cestId').removeAttr('disabled');
            $('input#cestDescricao').removeAttr('disabled');
        }

        $('body').addClass('loaded');
    }
</script>