<script>
    @Html.Partial("Functions/_fnMain");

    function calculaTotalNFSeVisualizar() {
        var idNFSe = $("form#fly01mdlfrmVisualizarNFSe input#id").val();
        $$$.loading.start();

        $.ajax({
            url: '@Url.Action("TotalNotaFiscal", "NotaFiscal")',
            type: "GET",
            data: { id: idNFSe }
        })
        .done(function (data) {
            if (data.success) {
                $('input#totalServicos').val(data.total.TotalServicos.formatMoneyMask(2, 3, '', ','));
                $('input#totalRetencoesServicos').val(data.total.TotalRetencoesServicos.formatMoneyMask(2, 3, '', ','));
                $('input#totalImpostosServicosNaoAgrega').val(data.total.TotalImpostosServicosNaoAgrega.formatMoneyMask(2, 3, '', ','));
                $('form#fly01mdlfrmVisualizarNFSe input#totalNotaFiscal').val(data.total.Total.formatMoneyMask(2, 3, '', ','));
                $$$.fn.updateTextFields();
            }
            else {
                $$$.fn.submitErrorHandler(null, data.message);
            }
            $$$.loading.stop();
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
            $$$.toast(err, "error");
            $$$.loading.stop();
        });
    }

    function fnFormReadyVisualizarNFSe() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("GetNFSeServicos", "NFSeServico")?id=" + $('#fly01mdlfrmVisualizarNFSe #id').val(),
            dataType: "json",
            contentType: "application/json",
            success: function (response) {
                if (response) {
                    $("#nfseServicosDataTable").DataTable().destroy();

                    var table = $("#nfseServicosDataTable").DataTable({
                        bSort: false,
                        paging: false,
                        bLengthChange: false,
                        searching: false,
                        ordering: false,
                        info: false,
                        data: response.data,
                        columns: [
                            { title: "Serviço", data: "servico_descricao" },
                            { title: "Grupo Tributário", data: "grupoTributario_descricao" },
                            { title: "Quant.", data: "quantidade" },
                            { title: "Valor", data: "valor" },
                            { title: "Desconto", data: "desconto" },
                            { title: "Outras Retenções", data: "valorOutrasRetencoes" },
                            { title: "Total", data: "total" }
                        ]
                    });
                } else {
                    $$$.toast(response.message, 'error');
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.toast(errorThrown, 'error');
            }
        });
        calculaTotalNFSeVisualizar();
    }
</script>