<script>
    function fnBaixarXMLNFSe(idRecord) {
        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("BaixarXML", "NFSe")?id=' + idRecord,
            type: "GET"
        })
        .done(function (data) {
            $$$.loading.stop();
            if (data.message) {
                $$$.fn.submitErrorHandler(null, data.message);
            } else {
                location.href = data.downloadAddress;
            }
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
            $$$.toast(err, "error");
            $$$.loading.stop();
        });
    }
</script>