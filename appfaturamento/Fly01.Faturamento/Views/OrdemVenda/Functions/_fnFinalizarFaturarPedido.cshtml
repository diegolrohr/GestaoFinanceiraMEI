<script>
    function fnFinalizarFaturarPedido(idRecord) {
        $$$.confirm("Confirmar Faturamento", "Deseja realmente finalizar e faturar este pedido? Irá gerar as notas fiscais e se marcado, irá movimentar o estoque e gerar financeiro. Não será mais possível editar", "fnFinalizarFaturarPedidoConfirmed(\"" + idRecord + "\")");
    }
    function fnFinalizarFaturarPedidoConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("FinalizarPedido", "Pedido")",
            dataType: 'json',
            data: { id: idRecord, faturar: true },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Pedido faturado com sucesso", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>