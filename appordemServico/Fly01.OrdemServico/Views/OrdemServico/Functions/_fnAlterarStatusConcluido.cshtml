<script>
    function fnAlterarStatusConcluido() {
        var id = $('#id').val();
        $$$.confirm("Confirmar Encerramento", "Deseja realmente concluir esta ordem? Não será mais possível editar/excluir", "fnConcluirOrdemConfirmed(\"" + id + "\")");
    }
    function fnConcluirOrdemConfirmed(id) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("MudarStatus", "OrdemServico")",
            dataType: 'json',
            data: { id: id, status: "Concluido", faturar: false },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Ordem concluída com sucesso!", "success");
                    $$$.go("@Url.Action("List", "OrdemServico")");
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>