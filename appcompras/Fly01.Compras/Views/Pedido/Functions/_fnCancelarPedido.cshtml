<script>
    function fnCancelarPedido() {
        var idRecord = $('form#fly01frm input#id').val();
        if (onCancelMustDeletePedido) {
            $$$.loading.start();
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "Pedido")",
                data: { id: idRecord },
                success: function (data) {
                    $$$.loading.stop();
                    if (data.success) {
                        $$$.toast("Cancelado com sucesso.", "success");
                        $$$.go("@Url.Action("List", "OrdemCompra")");
                    }
                    else {
                        $$$.fn.submitErrorHandler(null, data.message);
                    }
                },
                error: function (jXHR, textStatus, errorThrown) {
                    $$$.loading.stop();
                    $$$.toast(textStatus, "error");
                }
            });
        }
        else {
            $$$.go("@Url.Action("List", "OrdemCompra")");
        }
    }
</script>