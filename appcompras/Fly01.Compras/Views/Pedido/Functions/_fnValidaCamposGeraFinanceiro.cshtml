<script>
    function fnValidaCamposGeraFinanceiro() {
        if ($('input#geraFinanceiro:checked').val() == "true") {
            $("#formaPagamentoDescricao").rules("add", { required: true });
            $("#condicaoParcelamentoDescricao").rules("add", { required: true });
            $("#categoriaDescricao").rules("add", { required: true });
            $("#dataVencimento").rules("add", { required: true });
        }
        else {
            $("#formaPagamentoDescricao").rules("remove", "required");
            $('#formaPagamentoDescricao').removeClass("invalid")

            $("#condicaoParcelamentoDescricao").rules("remove", "required");
            $("#condicaoParcelamentoDescricao").removeClass("invalid")

            $("#categoriaDescricao").rules("remove", "required");
            $("#categoriaDescricao").removeClass("invalid")

            $("#dataVencimento").rules("remove", "required");
            $("#dataVencimento").removeClass("invalid")
        }
    }
</script>