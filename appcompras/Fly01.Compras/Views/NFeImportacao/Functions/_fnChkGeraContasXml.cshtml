<script>
    function fnChkGeraContasXml() {
        if ($("input#geraContasXml:checked").val() == "true")
        {
            $("input#geraFinanceiro").prop("checked", true);
            fnValidaCamposGeraFinanceiro();
            $("#labelSetCobrancasField").show();
            $("#cobrancasField").show();
            $("div#dataVencimentoField").hide();

            $("#dataVencimentoField").val("");
            $("div#condicaoParcelamentoIdField").hide();
            $("#condicaoParcelamentoId").val("");
            $("#condicaoParcelamentoDescricao").val("");
        }
        else {
            $("#labelSetCobrancasField").hide();
            $("#cobrancasField").hide();
            $("div#dataVencimentoField").show();
            $("div#condicaoParcelamentoIdField").show();
        }
    }
</script>