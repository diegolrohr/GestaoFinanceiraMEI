<script>
    function fnChangeTipoInscricao() {
        if ($('#tipoIndicacaoInscricaoEstadual').val() == "ContribuinteIsento") {
            $("#inscricaoEstadual").attr("disabled", true);
            $("#inscricaoMunicipal").attr("disabled", true);
        } else {
            $("#inscricaoEstadual").attr("disabled", false);
            $("#inscricaoMunicipal").attr("disabled", false);
        }
        if ($('#tipoIndicacaoInscricaoEstadual').val() == "ContribuinteICMS") {
            $("#inscricaoEstadual").rules("add", { required: true });
        }
        else {
            $("#inscricaoEstadual").rules("add", { required: false });
        }
        if ($('#tipoIndicacaoInscricaoEstadual').val() == "NaoContribuinte") {
            $("input#consumidorFinal").prop("checked", true);
            $("input#consumidorFinal").attr("onclick", "return false");
        }
        else {
            $("input#consumidorFinal").prop("checked", false);
            $("input#consumidorFinal").attr("onclick", "return true");
        }
    }

    function fnDesabilitaCamposPorTipoDeInscricao() {
        if ($('input#consumidorFinal:checked').val() == "true") {
            $("input#consumidorFinal").attr("onclick", "return false");
        }
        if ($('#id').val() == "" || $('#id').val() == undefined || $('#tipoIndicacaoInscricaoEstadual').val() == "ContribuinteIsento") {
            $("#inscricaoEstadual").attr("disabled", true);
            $("#inscricaoMunicipal").attr("disabled", true);
            $("#tipoIndicacaoInscricaoEstadual").val("ContribuinteIsento");
            $(".select-dropdown").val("Contribuinte Isento");
        }
    };
</script>
