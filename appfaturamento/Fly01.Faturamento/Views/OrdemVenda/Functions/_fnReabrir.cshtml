<script>
    function fnReabrir(idRecord) {
        $$$.confirm("Confirmar Reabertura do Pedido", "Deseja realmente reabrir este pedido? Se marcado, todas as movimentações de estoque serão desfeitas, contas financeiras e notas fiscais serão excluidas", "fnReabrirConfirmed(\"" + idRecord + "\")");
    }
    function fnReabrirConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("ReabrirPedido", "Pedido")",
            dataType: 'json',
            data: { id: idRecord },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Pedido Reaberto com sucesso", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>