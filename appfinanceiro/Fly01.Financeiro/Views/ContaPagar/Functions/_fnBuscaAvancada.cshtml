<script>
    function fnBuscaAvancada() {
        $('#dataVencimento').on("change", function () {
            let date = new Date;
            var firstDay = new Date(date.getFullYear(), date.getMonth(), 1);
            let lastDay = new Date(date.getFullYear(), date.getMonth() + 1, 0);

            if ($("#dataVencimentoInicio").val() === "" && $("#dataVencimentoFim").val() === "") {
                $("#dataVencimentoInicio").val(moment(firstDay).format('YYYY-MM-DD'));
                $("#dataVencimentoFim").val(moment(lastDay).format('YYYY-MM-DD'));
            } else {
                $("#dataInicial").val($("#dataVencimentoInicio").val());
                $("#dataFinal").val($("#dataVencimentoFim").val());
            }

            if ($("#dataVencimentoInicio").val() !== "" && $("#dataVencimentoFim").val() !== "")
                $$$._.fly01dt.refresh();

            $("#dataInicial").val(moment(firstDay).format('YYYY-MM-DD'));
            $("#dataFinal").val(moment(lastDay).format('YYYY-MM-DD'));
        });
    };
</script>