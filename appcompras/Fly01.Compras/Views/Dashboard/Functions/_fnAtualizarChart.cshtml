<script>
    function fnAtualizarChart(value) {

        if (value === "1") {
            $('#chartPagamentoValor').hide();
            $('#chartPagamentoQtd').hide();
            $('#chartStatusQtd').show();
            $('#chartStatusValor').show();
        }
        if (value === "2") {
            $('#chartStatusQtd').hide();
            $('#chartStatusValor').hide();
            $('#chartPagamentoValor').show();
            $('#chartPagamentoQtd').show();
        }
    }
</script>