<script>
    function fnConverterParaPedido(idRecord) {
        $$$.confirm("Confirmar Conversão", "Deseja realmente converter este orçamento em um pedido? O número continua o mesmo e será possível seguir o fluxo para movimentar o estoque, gerar financeiro e criar as notas fiscais.", "fnConverterParaPedidoConfirmed(\"" + idRecord + "\")");
    }
    function fnConverterParaPedidoConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("ConverterParaPedido", "Orcamento")",
            dataType: 'json',
            data: { id: idRecord },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Orçamento convertido em pedido com sucesso", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>