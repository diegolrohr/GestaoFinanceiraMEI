<script>
    function fnRangeChange(event) {
        var totalAntecipavel = parseFloat($("#totalAntecipavel").val().replace(".", "").replace(",", "."));
        var targetValue = parseFloat(event.target.value.replace(".", "").replace(",", "."));

        if (targetValue > totalAntecipavel) {
            targetValue = totalAntecipavel;
            $("#valorRecebivel").val(totalAntecipavel);
        }

        if (targetValue <= 0)
            $("#btnSimular").attr('disabled', 'disabled');
        else
            $("#btnSimular").removeAttr('disabled');

        if (event.target.id === "valorRecebivel"){
            $("#rangeRecebivel").val(targetValue);
            document.getElementById("rangeRecebivel").setAttribute("value", targetValue)
        }            
        else if (document.querySelector(`#${event.target.id} ~ span.thumb.active`))
            $("#valorRecebivel").val(event.target.value);
        $$$.fn.updateTextFields();
    }
</script>

