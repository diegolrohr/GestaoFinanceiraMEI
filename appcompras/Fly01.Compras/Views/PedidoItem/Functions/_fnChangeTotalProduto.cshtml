<script>
    function noComma(e) {
        return e.replace(',', '.');
    }

    function handleNegativeValuesProduto() {
        var formPedidoItem = 'form#fly01mdlfrmPedidoItem ';

        if (parseFloat($(formPedidoItem + 'input#valor').val()) < 0) {
            $(formPedidoItem + 'input#valor').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formPedidoItem + 'input#quantidade').val()) < 0) {
            $(formPedidoItem + 'input#quantidade').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formPedidoItem + 'input#desconto').val()) < 0) {
            $(formPedidoItem + 'input#desconto').val(function () { return (parseInt(noComma(this.value)) * -1) });
        }
    }

    function errTotalNegativoProduto(total) {
        var formPedidoItem = 'form#fly01mdlfrmPedidoItem ';

        fly01.fn.submitErrorHandler($formPedidoItem.validate(), "{\"innerMessage\": [{\"dataField\":\"input#desconto\",\"message\":\"O desconto não pode ser maior ou igual a R$ " + total + "\"}]}");

        $(formPedidoItem + 'input#total').val(total);
        $(formPedidoItem + 'input#desconto').val("");

        return false;
    }

    function fnChangeTotalProduto() {
        handleNegativeValuesProduto();

        var formPedidoItem = 'form#fly01mdlfrmPedidoItem ';

        var valor = noComma($(formPedidoItem + 'input#valor').val()), quantidade = noComma($(formPedidoItem + 'input#quantidade').val()), desconto = noComma($(formPedidoItem + 'input#desconto').val());

        if ((!valor) || (!quantidade)) {
            $(formPedidoItem + 'input#total').val("");
            return;
        }

        var total = (parseFloat(quantidade) * parseFloat(valor));

        ////para nota de complemento de quantidade,ou seja, nao foi informado quantidade, apenas valor.
        //if (total <= 0 && valor > 0) {
        //    total == valor
        //}
        var totalDescontado = total - (!desconto ? 0 : parseFloat(desconto));

        if (totalDescontado >= 0) {
            totalDescontado = totalDescontado.formatMoneyMask(2, 3, '', ',');
            $(formPedidoItem + 'input#total').val(totalDescontado);
        }
        else {
            total = total.formatMoneyMask(2, 3, '', ',');
            errTotalNegativoProduto(total);
        }
    }
</script>