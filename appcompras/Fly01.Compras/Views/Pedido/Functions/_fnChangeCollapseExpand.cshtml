<script>
    @Html.Partial("Functions/_fnMain");

    function fnChangeCollapseExpand(expandType) {
        if (expandType == "expandAll") {
            expandAll();
        }
        else {
            collapseAll();
        }
    }

    function expandAll() {
        $("#fly01mdlfrmVisualizarPedido .collapsible-header").addClass("active");
        $("#fly01mdlfrmVisualizarPedido .collapsible").collapsible({ accordion: false });
    }

    function collapseAll() {
        $("#fly01mdlfrmVisualizarPedido .collapsible-header").removeClass(function () {
            return "active";
        });
        $("#fly01mdlfrmVisualizarPedido .collapsible").collapsible({ accordion: true });
        $("#fly01mdlfrmVisualizarPedido .collapsible").collapsible({ accordion: false });
    }

</script>