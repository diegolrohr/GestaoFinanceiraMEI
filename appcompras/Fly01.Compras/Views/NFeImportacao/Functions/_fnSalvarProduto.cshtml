<script>
    function fnSalvarProduto() {
        let valorEscolhido = $('#btnPercent').hasClass('active') ?
            $('#percentualId').val() :
            $('#valorId').val();


        $("[data-type=atualizaValorVenda]").map((i, item) => {
            var input = $(item);
            if (input.prop("checked")) {
                //// pegaer valor da nota
                var valorNota = parseFloat($('#valor' + input.data("id")).val());

                //// multiplicar pelo valor informado (se percentual) 
                if ($('#btnPercent').hasClass('active')) {
                    valorNota = valorNota + (valorNota * (parseFloat(valorEscolhido) / 100));
                } else
                    valorNota = valorEscolhido;
                //// atribuir no campo abaixo
                $('#valorVenda' + input.data("id")).val(valorNota);
            }
        });

        $$$._.fly01mdlfrmProdutoValorVendas.close();
    }
</script>