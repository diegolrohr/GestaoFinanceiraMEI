
<script>
    function fnCancelarBaixas(idRecord) {
        $$$.confirm("Confirmar Cancelamento", "Deseja realmente cancelar o/s pagamento/s deste título?", "fnCancelarBaixasConfirmed(\"" + idRecord + "\")");
    }
    function fnCancelarBaixasConfirmed(idRecord) {
        if (idRecord) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("CancelarBaixaTitulo")",
                data: { id: idRecord },
                success: function (data) {
                    if (data.success) {
                        $$$.toast("Pagamento/s cancelado/s com sucesso.", 'success');
                        $("#fly01dt").DataTable().ajax.reload(null, false);
                    }
                    else {
                        $$$.toast(data.message, 'error');
                    }
                },
                error: function (jXHR, textStatus) {
                    $$$.toast(textStatus, 'error');
                }
            });
        }
    }

</script>