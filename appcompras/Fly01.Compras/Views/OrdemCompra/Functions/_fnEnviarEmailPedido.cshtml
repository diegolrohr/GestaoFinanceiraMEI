<script>
    function fnEnviarEmailPedido(idRecord) {
        $$$.loading.start();

        $.ajax({
            url: '@Url.Action("EnviaEmailPedido", "Pedido")',
            data: { id: idRecord },
			type: "POST",
			success : function(data) {
			    $$$.loading.stop();
			    if (data.success) {
			        $$$.toast("Email enviado com sucesso.", "success");
			    } else {
			        $$$.fn.submitErrorHandler(null, data.message);
			    }
			},
            error: function (jqxhr, textStatus, error) {
				var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
				$$$.toast(err, "error");
				$$$.loading.stop();
			}
        });
    }
</script>
