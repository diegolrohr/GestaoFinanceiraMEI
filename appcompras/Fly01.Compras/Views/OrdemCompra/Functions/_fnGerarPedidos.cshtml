<script>
    function fnGerarPedidos(idRecord) {
        fly01.confirm("Confirmar Finalização", "Deseja realmente finalizar este orçamento e gerar os pedidos respectivos aos fornecedores? Não será mais possível editar/excluir", "fnFinalizarOrcamentoConfirmed(\"" + idRecord + "\")");
    }
    function fnFinalizarOrcamentoConfirmed(idRecord) {        
        fly01.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("GerarPedidos", "Orcamento")",            
            dataType: 'json',
            data: { id: idRecord },
            success: function (data) {
                fly01.loading.stop();
                if (data.success) {
                    fly01.toast("Orçamento finalizado com sucesso", "success");
                    fly01._.fly01dt.refresh();
                }
                else {                    
                    fly01.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                fly01.loading.stop();
                fly01.toast(textStatus, "error");
            }
        });
    }
</script>