<script>
    function desabilitaCampoInscricaoEstadual() {
        $('input#inscricaoEstadualId').val("ISENTO");
        $('input#inscricaoEstadualId').change();
        $('input#inscricaoEstadualId').attr('readonly', 'readonly');
    }

    function habilitaCampoInscricaoEstadual() {
        $('input#inscricaoEstadualId').removeAttr('readOnly');
        $('input#inscricaoEstadualId').val("");
        $('input#inscricaoEstadualId+label').removeClass("active");
    }

    function fnChkIsentoInscricaoEstadual() {
        if ($('#chkIsento:checked').val() == "true") {
            desabilitaCampoInscricaoEstadual();
        }
        else {
            habilitaCampoInscricaoEstadual();
        }
    }
</script>
