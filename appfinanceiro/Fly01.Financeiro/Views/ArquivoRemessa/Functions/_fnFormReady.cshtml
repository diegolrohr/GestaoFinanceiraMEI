<script>
    function fnGetTextByStatus() {
        var arquivo = $('#descricao').val();
        var dataExportacao = $('#dataExportacao').val();
        
        if ($('#statusArquivoRemessa').val() == "AguardandoRetorno") 
            return `Arquivo ${arquivo} exportado no dia ${dataExportacao}, está aguardando o arquivo de retorno para ser finalizado.`;
        else if ($('#statusArquivoRemessa').val() == "RetornoParcial")
            return `Os boletos do arquivo ${arquivo} exportado no dia ${dataExportacao}, foram pagos parcialmente.`;
        else
            return `Arquivo ${arquivo} exportado no dia ${dataExportacao}, foi finalizado.`;
    }

    function fnFormReady() {        
        $("#cardObs").loading("stop");
        fly01._.cardObs.info(fnGetTextByStatus());
    }
</script>