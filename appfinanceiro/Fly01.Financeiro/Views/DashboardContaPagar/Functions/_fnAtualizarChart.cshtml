<script>
    function fnAtualizarChart(value) {

        if (value === "1") {
            $('#chartStatus').show();
            $('#chartPagamento').hide();
            $('#chartCategoria').hide();            
        }
        if (value === "2") {
            $('#chartStatus').hide();
            $('#chartPagamento').show();
            $('#chartCategoria').hide();    
        }
        if (value === "3") {
            $('#chartStatus').hide();
            $('#chartPagamento').hide();
            $('#chartCategoria').show();    
        }
    }
</script>