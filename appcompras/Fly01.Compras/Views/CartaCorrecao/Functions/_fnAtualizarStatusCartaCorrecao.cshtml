<script>
    function fnAtualizarStatusCartaCorrecao() {
        var notaFiscalId = window.location.href.substr(window.location.href.lastIndexOf('/') + 1);

        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("AtualizaStatus")',
            type: "GET",
            data: { idNotaFiscal: notaFiscalId }
        })
        .done(function (data) {
            $$$.loading.stop();
            if (data.message) {
                $$$.fn.submitErrorHandler(null, data.message);
            } else {
                $$$._.fly01dt.refresh();
            }
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
            $$$.toast(err, "error");
            $$$.loading.stop();
        });
    }
</script>