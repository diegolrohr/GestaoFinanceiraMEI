<script>
    function fnShowCOFINS() {
        //Se ha calculo de COFINS (checked), habilite os campos relacionados
        if ($('#calculaCofins:checked').val() == "true") {
            $('input#aplicaFreteBaseCofins').removeAttr('disabled');
            $('input#aplicaDespesaBaseCofins').removeAttr('disabled');
            if ($('select#tipoTributacaoCOFINS').val() == null) {// Garante sempre um valor ao habilitar campo
                $('select#tipoTributacaoCOFINS').val("T01");
            }
        }
        else {
            //Se nao ha calculo de COFINS, desabilite os campos relacionados
            $('input#aplicaFreteBaseCofins').attr('disabled', 'disabled');
            $('input#aplicaDespesaBaseCofins').attr('disabled', 'disabled');
        }
    }
</script>