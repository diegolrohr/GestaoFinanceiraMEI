<script>
    function __format(v, n, x, s, c) {
        if (typeof v !== 'number') {
            v = TryParseFloat(v);
        }

        var re = '\\d(?=(\\d{' + (x || 3) + '})+' + (n > 0 ? '\\D' : '$') + ')',
                num = v.toFixed(Math.max(0, ~~n));
        return (c ? num.replace('.', c) : num).replace(new RegExp(re, 'g'), '$&' + (s || ''));
    }

    function __formatMoney(value) {
        return __format(value, 2, 3, '.', ',');
    }
</script>