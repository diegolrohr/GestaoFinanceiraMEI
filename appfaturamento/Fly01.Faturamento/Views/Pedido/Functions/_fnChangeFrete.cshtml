<script>
    function noComma(e) {
        return e.replace(',', '.');
    }

    function fnChangeFrete() {
        $('input#valorFrete').removeAttr('disabled');
        var tipoFrete = $('select#tipoFrete').val();
        var tipoVenda = $('#tipoVenda').val();
        var calculaFrete = (
                ((tipoFrete == "CIF" || tipoFrete == "Remetente") && tipoVenda == "Normal") ||
                ((tipoFrete == "FOB" || tipoFrete == "Destinatario") && tipoVenda == "Devolucao")
            );
        if (calculaFrete) {
            $('#transportadoraNome').rules("add", { required: true });
        }
        else {
            $('#transportadoraNome').rules("remove", "required");
            $('#transportadoraNome').removeClass("invalid");

            if (tipoFrete == "SemFrete") {
                $('input#valorFrete').val(0);
                $('input#valorFrete').attr('disabled', 'disabled');
            }
            fly01.fn.updateTextFields();
        }
    }
</script>