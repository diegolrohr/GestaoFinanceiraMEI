<script>
function fnExcluirNFe(idRecord) {
    $$$.confirm("Confirmar Exclusão", "Ao excluir a nota fiscal o pedido de origem continua finalizado, não sendo mais possivel gerar uma nova nota fiscal apartir do mesmo. Deseja realmente excluir este registro?", "fnExcluirNFeConfirmed(\"" + idRecord + "\")");
}
function fnExcluirNFeConfirmed(idRecord) {
    $('body').removeClass('loaded');
    if (idRecord) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("Delete", "NFe")",
            data: { id: idRecord },
            success: function (data) {
                $('body').addClass('loaded');
                if (data.success) {
                    $$$.toast("Excluído com sucesso.", "success");
                    var dtId = $("input[value=\"" + idRecord + "\"]").closest('table').attr('id');
                    $$$._[dtId].refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $('body').addClass('loaded');
                $$$.toast(textStatus, "error");
            }
        });
    }
}
</script>