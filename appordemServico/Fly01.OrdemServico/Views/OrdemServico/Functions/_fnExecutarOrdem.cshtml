<script>
    function fnExecutarOrdem(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("ExecutarOrdem", "OrdemServico")",
            dataType: 'json',
            data: { id: idRecord, faturar: false },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("A ordem agora está em andamento!", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>