<script>
    function fnShowICMS() {
        //Se ha calculo de ICMS (checked), habilite os campos relacionados
        if ($('#calculaIcms:checked').val() == "true") {
            $('input#calculaIcmsDifal').removeAttr('disabled');
            $('input#aplicaIpiBaseIcms').removeAttr('disabled');
            $('input#aplicaFreteBaseIcms').removeAttr('disabled');
            $('input#aplicaDespesaBaseIcms').removeAttr('disabled');
            if ($('select#tipoTributacaoICMS').val() == null) {// Garante sempre um valor ao habilitar campo
                $('select#tipoTributacaoICMS').val("TributadaComPermissaoDeCredito");
            }
            
        }
        else {
            //Se nao ha calculo de ICMS, desabilite os campos relacionados
            $('input#calculaIcmsDifal').attr('disabled', 'disabled');
            $('input#aplicaIpiBaseIcms').attr('disabled', 'disabled');
            $('input#aplicaFreteBaseIcms').attr('disabled', 'disabled');
            $('input#aplicaDespesaBaseIcms').attr('disabled', 'disabled');
        }
    }
</script>