<script>
    function fnModalImprimeBoleto(contaReceberId) {
        var url = "@Url.Action("FormImprimeBoleto", "ContaReceber")?contaReceberId=" + contaReceberId;
        $$$.modal(url);
    }

    function fnEditImprimeBoleto(contaReceberId) {
        $$$.confirm("Geração de boleto", "Esta conta não é do tipo boleto, você deve editar a forma de pagamento desta conta. Deseja prosseguir?", "fnRedirectToEdit(\"" + contaReceberId + "\")");
    }

    function fnRedirectToEdit(id) {
        $$$.go("@Url.Action("Form", "" + ViewContext.Controller.ValueProvider.GetValue("controller").RawValue)", id);
    }
</script>