<script>
    function showPopUpExcluirItens(idRecord) {
        bootbox.confirm({
            buttons: {
                confirm: {
                    label: "Excluir",
                    className: "button btn btn-primary"
                },
                cancel: {
                    label: "Cancelar",
                    className: "button btn btn-default"
                }
            },
            animate: true,
            title: "Confirmar Exclusão",
            message: "<b>Você está prestes a excluir todas as parcelas relacionadas à esta conta.</b><br>Deseja realmente excluir todas as parcelas?",
            callback: function (result) {
                if (result) {
                    if (idRecord != null && idRecord.length > 0) {
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("DeleteParcelamento", "ContaReceber")',
                            data: { id: idRecord },
                            success: function (data) {
                                if (data.success) {
                                    $.ajax({
                                        type: "GET",
                                        url: '@Url.Action("List", "ContaReceber")',
                                        success: function (dados) {
                                            $('#content').html(dados);
                                            ShowSuccess(data.message);
                                        }
                                    });
                                }
                                else {
                                    ShowError(data.message);
                                }
                            },
                            error: function (jXHR, textStatus, errorThrown) {
                                alert(errorThrown);
                            }
                        });
                    }
                }
            }
        });
    }
</script>