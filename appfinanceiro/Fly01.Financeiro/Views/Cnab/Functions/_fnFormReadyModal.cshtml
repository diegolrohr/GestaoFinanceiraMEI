<script>
    function fnFormReadyModal() {
        if ($("#ids").val() === "") {
            $("#ids").val($$$._.dtBoletos.selected);
        }
        $$$._.dtBoletos.selected = [];
        $.ajax({
            type: "GET",
            dataType: "json", 
            url: '@Url.Action("GetTemplateBoleto", "Cnab")',
            success: function success(data) {
                if (data.success) {
                    if (data.data !== null ) {
                        $("#mensagem").val(data.data.Mensagem);
                        $("#assunto").val(data.data.Assunto);
                        $$$.fn.updateTextFields();
                    }
                } else {
                    $$$.loading.stop();
                    $$$.toast(data.message, "error");
                }
            }
        });
    }
</script>