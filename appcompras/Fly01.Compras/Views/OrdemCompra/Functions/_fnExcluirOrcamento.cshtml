<script>
function fnExcluirOrcamento(idRecord) {
    $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir este registro?", "fnExcluirOrcamentoConfirmed(\""+idRecord+"\")");
}
function fnExcluirOrcamentoConfirmed(idRecord) {
    $('body').removeClass('loaded');
    if (idRecord) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("Delete","Orcamento")",
            data: { id: idRecord },
            success: function (data) {
                $('body').addClass('loaded');
                if (data.success) {
                    $$$.toast("Excluído com sucesso.", "success");
                    //var idRec = JSON.parse("{\"" + this.data.replace(/ /g, "\", \"").replace(/=/g, "\": \"") + "\"}").id;
                    $("input[value=\"" + idRecord + "\"]").parent().parent().remove();
                }
                else {
                    $$$.toast(data.message, "error");
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $('body').addClass('loaded');
                $$$.toast(textStatus, "error");
            }
        });
    }
}
</script>
