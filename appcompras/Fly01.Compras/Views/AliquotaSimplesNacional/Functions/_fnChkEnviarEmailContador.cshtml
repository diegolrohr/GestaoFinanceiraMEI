<script>
    function fnChkEnviarEmailContador() {
        if ($('input#enviarEmailContador:checked').val() == "true") {
            $("input#emailContador").rules("add", { required: true });
            $('input#emailContador').attr("disabled", "disabled");
        }
        else {
            $("input#emailContador").rules("remove", "required");
            $('input#emailContador').removeClass("invalid");
            $('input#emailContador').removeAttr("disabled");
        }
    }
</script>

