<script>
    function fnCancelarOrdem(idRecord) {
        $$$.confirm("Confirmar Cancelamento", "Deseja realmente cancelar esta ordem? Não será mais possível editar/excluir", "fnCancelarOrdemConfirmed(\"" + idRecord + "\")");
    }
    function fnCancelarOrdemConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("CancelarOrdem", "OrdemServico")",
            dataType: 'json',
            data: { id: idRecord, faturar: false },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Ordem cancelada com sucesso!", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>