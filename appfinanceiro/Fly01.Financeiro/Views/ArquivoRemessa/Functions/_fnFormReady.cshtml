<script>
    function fnGetTextByStatus() {
        var arquivo = $('#descricao').val();
        var dataExportacao = $('#dataExportacao').val();
        
        if ($('#statusArquivoRemessa').val() == "AguardandoRetorno") 
            return `Arquivo ${arquivo} com a data exportação ${dataExportacao}, Esta aguardando o arquivo retorno para ser finalizado`;
        else if ($('#statusArquivoRemessa').val() == "RetornoParcial")
            return `Os boletos do arquivo ${arquivo} com a data exportação ${dataExportacao}, foram pagos parcialmente`;
        else
            return `Arquivo ${arquivo} com a data exportação ${dataExportacao}, foi finalizado`;
    }

    function fnFormReady() {        
        $("#cardObs").loading("stop");
        fly01._.cardObs.info(fnGetTextByStatus());
    }
</script>