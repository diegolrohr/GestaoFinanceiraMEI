<script>
    function fnAtualizarChart(value) {

        if (value === "1") {
            $('#chartPagamento').hide();
            $('#chartStatusQtd').show();
            $('#chartStatusValor').show();
        }
        if (value === "2") {
            $('#chartStatusQtd').hide();
            $('#chartStatusValor').hide();
            $('#chartPagamento').show();
        }
    }
</script>