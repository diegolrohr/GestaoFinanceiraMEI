<script>
    @Html.Partial("Functions/_fnMain");

    function fnShowListCnab() {
        if ($('#bancoNome').val().length != "") {
            if ($('#pessoaId').val().length != "" || $('#dataPicker').val().length != "") {
                $('#dtCnabItem').show();
                $('#dtCnabItem_wrapper').show()
                $$$._.dtCnabItem.selected = [];
                $$$._.dtCnabItem.refresh();
                $('#save').removeAttr('disabled');
            }
            else {
                $$$.toast("Informe um Cliente ou Período!", "error");
            }
        }
    };
</script>