<script>
    function noComma(e) {
        return e.replace(',', '.');
    }

    function handleNegativeValues() {
        var formOrcamento = 'form#fly01mdlfrmOrcamentoItem ';
        
        if (parseFloat($(formOrcamento + 'input#valor').val()) < 0) {
            $(formOrcamento + 'input#valor').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formOrcamento + 'input#quantidade').val()) < 0) {
            $(formOrcamento + 'input#quantidade').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formOrcamento + 'input#desconto').val()) < 0) {
            $(formOrcamento + 'input#desconto').val(function () { return (parseInt(noComma(this.value)) * -1) });
        }
    }

    function errTotalNegativo(total) {
        var formOrcamento = 'form#fly01mdlfrmOrcamentoItem ';

        fly01.toast("O Desconto não pode ser maior ou igual a " + total + " reais.", 'error');

        $(formOrcamento + 'input#total').val(total);
        $(formOrcamento + 'input#desconto').val("");
    }

    function fnChangeTotal() {
        handleNegativeValues();

        var formOrcamento = 'form#fly01mdlfrmOrcamentoItem ';

        var valor = noComma($(formOrcamento + 'input#valor').val()), quantidade = noComma($(formOrcamento + 'input#quantidade').val()), desconto = noComma($(formOrcamento + 'input#desconto').val());

        if ((!valor) || (!quantidade)) {
            $(formOrcamento + 'input#total').val("");
            return;
        }
        
        var total = (parseFloat(quantidade) * parseFloat(valor));
        var totalDescontado = total - (!desconto ? 0 : parseFloat(desconto));      

        if (totalDescontado > 0) {
            totalDescontado = totalDescontado.formatMoneyMask(2, 3, '', ',');
            $(formOrcamento + 'input#total').val(totalDescontado);
        }
        else {
            total = total.formatMoneyMask(2, 3, '', ',');
            errTotalNegativo(total);
        }
            
    }
</script>