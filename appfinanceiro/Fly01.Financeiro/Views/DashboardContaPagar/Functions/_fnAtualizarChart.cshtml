<script>
    function fnAtualizarChart(value) {

        if (value === "1") {
            $('#chartStatusVlr').show();
            $('#chartStatusQtd').show();
            $('#chartPagamentoVlr').hide();
            $('#chartPagamentoQtd').hide();
            $('#chartCategoriaVlr').hide();            
            $('#chartCategoriaQtd').hide(); 
        }
        if (value === "2") {            
            $('#chartStatusVlr').hide();
            $('#chartStatusQtd').hide();
            $('#chartPagamentoVlr').show();
            $('#chartPagamentoQtd').show();
            $('#chartCategoriaVlr').hide();    
            $('#chartCategoriaQtd').hide(); 
        }
        if (value === "3") {
            $('#chartStatusVlr').hide();
            $('#chartStatusQtd').hide();
            $('#chartPagamentoVlr').hide();
            $('#chartPagamentoQtd').hide();
            $('#chartCategoriaVlr').show();    
            $('#chartCategoriaQtd').show();    
        }
    }
</script>