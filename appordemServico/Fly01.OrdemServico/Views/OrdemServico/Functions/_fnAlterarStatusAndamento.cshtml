<script>
    function fnAlterarStatusAndamento() {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("MudarStatus", "OrdemServico")",
            dataType: 'json',
            data: { id: $('#id').val(), status: "EmAndamento", faturar: false },
        success: function (data) {
            $$$.loading.stop();
            if (data.success) {
                $$$.toast("A ordem agora está em andamento!", "success");
                $$$.go("@Url.Action("List", "OrdemServico")");
            }
            else {
                $$$.fn.submitErrorHandler(null, data.message);
            }
        },
        error: function (jXHR, textStatus, errorThrown) {
            $$$.loading.stop();
            $$$.toast(textStatus, "error");
        }
    });
    }
</script>