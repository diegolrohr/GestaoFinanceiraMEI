<script>
    function fnShowPIS() {
        //Se ha calculo de PIS (checked), habilite os campos relacionados
        if ($('#calculaPis:checked').val() == "true") {
            $('input#retemPis').removeAttr('disabled');
            $('input#aplicaFreteBasePis').removeAttr('disabled');
            $('input#aplicaDespesaBasePis').removeAttr('disabled');
            if ($('select#tipoTributacaoPIS').val() == null) {// Garante sempre um valor ao habilitar campo
                $('select#tipoTributacaoPIS').val("T01");
            }
        }
        else {
            //Se nao ha calculo de PIS, desabilite os campos relacionados
            $('input#retemPis').attr('disabled', 'disabled');
            $('input#aplicaFreteBasePis').attr('disabled', 'disabled');
            $('input#aplicaDespesaBasePis').attr('disabled', 'disabled');
        }
    }
</script>