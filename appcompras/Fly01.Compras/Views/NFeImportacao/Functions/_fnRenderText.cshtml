<script>

    function fnRenderText(row, type) {
        let attr = { "type": "text", "class": "mask currency", "style":"height:1.5rem;padding:8 4 8 4;margin:0;" , "id": `${type}${row.id}` };
        if (row.parentId) attr["data-parentId"] = row.parentId;
        if (type) attr["data-type"] = type;
        if (row.id) attr["data-id"] = row.id;

        return createElem("div", null, [
            createElem("input", attr),
            createElem("label", { "for": `${type}${row.id}` }),
            createElem("input", { "type": "hidden", "id": `valor${row.id}`, "value": row.valorCurrency, "data-type": "valor", "data-id": row.id })
        ]).outerHTML;
    }

    function fnDrawCallback() {
        $$$.fn.maskFields();
        $('#dtProdutosResolvidos_paginate').hide();
        $(`#dtProdutosResolvidos`).loading("stop");
    }
</script>
