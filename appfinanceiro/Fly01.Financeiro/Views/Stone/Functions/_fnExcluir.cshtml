<script>
function fnExcluir(idRecord) {
    $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir esta simulação?", "fnExcluirSimulacaoConfirmed(\""+idRecord+"\")");
}
function fnExcluirSimulacaoConfirmed(idRecord) {
    $$$.loading.start();
    if (idRecord) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteSimulacao", "Stone")",
            data: { id: idRecord },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Simulação excluída com sucesso.", "success");
                    $$$._.dtSimulacao.draw();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
}
</script>