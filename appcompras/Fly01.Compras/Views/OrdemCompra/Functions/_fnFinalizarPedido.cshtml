<script>
    function fnFinalizarPedido(idRecord) {
        fly01.confirm("Confirmar Finalização", "Deseja realmente finalizar este pedido? Se marcado, irá movimentar o estoque e gerar financeiro. Não será mais possível editar/excluir", "fnFinalizarPedidoConfirmed(\"" + idRecord + "\")");
    }
    function fnFinalizarPedidoConfirmed(idRecord) {
        fly01.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("FinalizarPedido", "Pedido")",
            dataType: 'json',
            data: { id: idRecord },
            success: function (data) {
                fly01.loading.stop();
                if (data.success) {
                    fly01.toast("Pedido finalizado com sucesso", "success");
                    fly01._.fly01dt.refresh();
                }
                else {
                    try {
                        var jsonMessage = JSON.parse(data.message);

                        jsonMessage.innerMessage.filter(x => ((x.dataField || "") == "")).forEach(element => {
                            fly01.toast(element.message, "error", 8000);
                        });
                    } catch (e) {
                        fly01.toast(data.message, "error");
                    }
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                fly01.loading.stop();
                fly01.toast(textStatus, "error");
            }
        });
    }
</script>