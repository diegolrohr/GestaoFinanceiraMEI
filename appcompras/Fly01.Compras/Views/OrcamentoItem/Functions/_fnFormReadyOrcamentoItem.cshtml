<script>
    @Html.Partial("Functions/_fnMain");

    function isCreateItem() {
        var id = $("form#fly01mdlfrmOrcamentoItem input#id").val();

        if (id.length == 0)
            return true;

        return false;
    }

    function initializeFornecedor(filledHidden) {
        $('form#fly01mdlfrmOrcamentoItem input#itemFornecedorNome').val(filledHidden.val());
        $("form#fly01mdlfrmOrcamentoItem label[for='itemFornecedorNome']").addClass('active');
    }

    function fnFormReadyOrcamentoItem() {
        $('form#fly01mdlfrmOrcamentoItem input#orcamentoId').val($('form#fly01frm input#id').val());

        fnOverrideSubmitOrcamentoItem();

        if (!isCreateItem()) {
            initializeFornecedor($('form#fly01mdlfrmOrcamentoItem input#fornecedorNome'));
        }
    }

    function fnOverrideSubmitOrcamentoItem() {
        var myForm = 'form#fly01mdlfrmOrcamentoItem'

        $(myForm).off('submit');
        $(myForm).on('submit', function (e) {
            var that = $(myForm)

            if (!that.valid())
                return false;
            e.preventDefault();
            $$$.loading.start();
            var formData = that.serializeObject();
            $.ajax({
                type: that.attr("method"),
                contentType: 'application/json',
                dataType: 'json',
                url: that.attr("action"),
                data: JSON.stringify(formData),
                success: function (data) {
                    if (data.success) {
                        $$$.toast(data.message, "success");
                        $$$._.dtOrcamentoItens.refresh();
                        $$$._.fly01mdlfrmOrcamentoItem.close();
                    } else {
                        $$$.loading.stop();
                        $$$.fn.submitErrorHandler(null, data.message);
                    }
                    $$$.loading.stop();
                },
                error: function error(jXHR, textStatus) {
                    $$$.toast(textStatus, "error");
                    $$$.loading.stop();
                }
            })
        });

    }


</script>