<script>
    function fnAtualizarChart(value) {
        if (value === "1") {
            $('#dchartPagamentoValor').hide();
            $('#dchartPagamentoQtd').hide();
            $('#dchartStatusQtd').show();
            $('#dchartStatusValor').show();
        }
        if (value === "2") {
            $('#dchartStatusQtd').hide();
            $('#dchartStatusValor').hide();
            $('#dchartPagamentoValor').show();
            $('#dchartPagamentoQtd').show();
        }        
    }
</script>