<script>
    function fnCancelarPedido() {
        var idRecord = $('form#fly01frm input#id').val();
        if (onCancelMustDelete) {
            fly01.loading.start();
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "Pedido")",
                data: { id: idRecord },
                success: function (data) {
                    fly01.loading.stop();
                    if (data.success) {
                        fly01.toast("Cancelado com sucesso.", "success");
                        fly01.go("@Url.Action("List", "Home")");
                    }
                    else {
                        fly01.toast(data.message, "error");
                    }
                },
                error: function (jXHR, textStatus, errorThrown) {
                    fly01.loading.stop();
                    fly01.toast(textStatus, "error");
                }
            });
        }
        else {
            fly01.go("@Url.Action("List", "Home")");
        }
    }
</script>