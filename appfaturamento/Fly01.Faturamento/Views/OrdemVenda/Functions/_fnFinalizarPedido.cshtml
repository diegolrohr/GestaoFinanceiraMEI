<script>
    function fnFinalizarPedido(idRecord) {
        $$$.confirm("Confirmar Finalização", "Deseja realmente finalizar este pedido? Se marcado, irá movimentar o estoque e gerar financeiro. Não será mais possível editar", "fnFinalizarPedidoConfirmed(\"" + idRecord + "\")");
    }
    function fnFinalizarPedidoConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("FinalizarPedido", "Pedido")",
            dataType: 'json',
            data: { id: idRecord, faturar: false },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Pedido finalizado com sucesso", "success");
                    $$$._.fly01dt.refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>