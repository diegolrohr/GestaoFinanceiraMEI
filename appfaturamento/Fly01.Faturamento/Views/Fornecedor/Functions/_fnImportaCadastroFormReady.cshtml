<script>
    function fnImportaCadastroFormReady() {
        $$$._.cardDuvidas.info("Se preferir você pode baixar um arquivo modelo de importação.<br /><br />" +
                                 "Dicas:<br />" +
                                 "Você deve editar o modelo com Notepad++ ou bloco de notas.<br />" +
                                 "Os dados contidos no exemplo são apenas exemplos, é preciso preencher as linhas com informações válidas.<br />" +
                                 "");
        $("#cardDuvidas h5").css({ "text-align": "left" });
        $("#observacao").closest("div").css("display", "none");
        $$$.fn.updateTextFields();

        $("#cardDuvidas a").on("click", function () {
            fnBaixarModelo();
        })
    }

    function fnBaixarModelo() {
        var documentoHelper = '"Nome","TipoDocumento","CPFCNPJ","CEP","Endereco","Numero","Complemento","Bairro","Telefone","Celular","Contato","Observacao","Email","NomeComercial","Cliente","Fornecedor","Transportadora","Vendedor"\n';
        documentoHelper += '"Nome completo 1","F","00000000000","91000000","R. Fly01","1000","Casa 10","Bairro Alameda dos Anjos","33333333333","99999999999","99999999991","Observação x","teste@teste.com.br","Teste","0","1","0","0"\n';
        documentoHelper += '"Nome completo 2","J","00000000000000","91000000","R. Fly01","1000","Casa 10","Bairro Alameda dos Anjos","+55555555555","99999999999","99999999992","Observação y","teste@teste.com.br","Teste","0","1","0","0"\n';

        var blob = new Blob([documentoHelper], { type: 'text/csv;charset=utf-8;' });
        var filename = 'template.csv';

        if (window.navigator.msSaveOrOpenBlob) {
            window.navigator.msSaveBlob(blob, filename);
        }
        else {
            var elem = window.document.createElement('a');
            elem.href = window.URL.createObjectURL(blob);
            elem.download = filename;
            document.body.appendChild(elem);
            elem.click();
            document.body.removeChild(elem);
        }
    }
</script>