<script>
    function fnClonarPedido(idRecord) {
        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("ClonarPedido", "Pedido")?id=' + idRecord,
            type: "GET",
            success: function (data) {
                if (data.success) {
                    $$$.loading.stop();
                    $$$.go("@Url.Action("FormPedido", "Pedido", new { isEdit = "true" })", data.id);           
                }
                else {
                    $$$.loading.stop();
                    $$$.toast(data.message, 'error');
                }
            },            
        });
    }
</script>