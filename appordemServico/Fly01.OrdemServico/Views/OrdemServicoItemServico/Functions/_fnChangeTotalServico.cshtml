<script>
    function noComma(e) {
        return e.replace(',', '.');
    }

    function handleNegativeValuesServico() {
        var formOrdemVenda = 'form#fly01mdlfrmOrdemServicoItemServico ';

        if (parseFloat($(formOrdemVenda + 'input#valor').val()) < 0) {
            $(formOrdemVenda + 'input#valor').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formOrdemVenda + 'input#quantidade').val()) < 0) {
            $(formOrdemVenda + 'input#quantidade').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formOrdemVenda + 'input#desconto').val()) < 0) {
            $(formOrdemVenda + 'input#desconto').val(function () { return (parseInt(noComma(this.value)) * -1) });
        }
    }

    function errTotalNegativoServico(total) {
        var formOrdemVenda = 'form#fly01mdlfrmOrdemServicoItemServico ';

        fly01.fn.submitErrorHandler($formOrdemVenda.validate(), "{\"innerMessage\": [{\"dataField\":\"input#desconto\",\"message\":\"O desconto não pode ser maior ou igual a R$ " + total + "\"}]}");

        $(formOrdemVenda + 'input#total').val(total);
        $(formOrdemVenda + 'input#desconto').val("");

        return false;
    }

    function fnChangeTotalServico() {
        handleNegativeValuesServico();

        var formOrdemServico = 'form#fly01mdlfrmOrdemServicoItemServico ';

        var valor = noComma($(formOrdemVenda + 'input#valor').val()), quantidade = noComma($(formOrdemServico + 'input#quantidade').val()), desconto = noComma($(formOrdemServico + 'input#desconto').val());

        if ((!valor) || (!quantidade)) {
            $(formOrdemServico + 'input#total').val("");
            return;
        }

        var total = (parseFloat(quantidade) * parseFloat(valor));
        var totalDescontado = total - (!desconto ? 0 : parseFloat(desconto));

        if (totalDescontado >= 0) {
            totalDescontado = totalDescontado.formatMoneyMask(2, 3, '', ',');
            $(formOrdemServico + 'input#total').val(totalDescontado);
        }
        else {
            total = total.formatMoneyMask(2, 3, '', ',');
            errTotalNegativoServico(total);
        }
    }
</script>