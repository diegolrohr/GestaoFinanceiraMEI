<script>
function fnExcluirNFeImportacao(idRecord) {
    $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir este registro? Se a importação já estiver finalizada, as operações efetivadas serão mantidas.", "fnExcluirNFeImportacaoConfirmed(\""+idRecord+"\")");
}
function fnExcluirNFeImportacaoConfirmed(idRecord) {
    $('body').removeClass('loaded');
    if (idRecord) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("Index")/Delete",
            data: { id: idRecord },
            success: function (data) {
                $('body').addClass('loaded');
                if (data.success) {
                    $$$.toast("Excluído com sucesso.", "success");
                    var dtId = $("input[value=\"" + idRecord + "\"]").closest('table').attr('id');
                    $$$._[dtId].refresh();
                }
                else {
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $('body').addClass('loaded');
                $$$.toast(textStatus, "error");
            }
        });
    }
}
</script>