<script>
    function fnSalvaTemplate() {
        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("SalvaTemplate", "TemplateBoleto")',
            type: "POST",
            data: {              
                mensagem: $('#mensagem').val(),
                assunto: $("#assunto").val()
            },
            success: function (response) {
                if (response.success) {
                    $$$.fn.updateTextFields();
                    $$$.toast("Template salvo com sucesso.", 'success', '4000');
                }
                else {
                    $$$.fn.submitErrorHandler($('#fly01frm').validate(), response.message, 'error');
                }

                $$$.loading.stop();
            },
        });
    }

</script>