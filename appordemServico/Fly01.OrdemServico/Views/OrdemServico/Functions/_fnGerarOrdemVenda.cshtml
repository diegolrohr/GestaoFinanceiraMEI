<script>
    function fnGerarOrdemVenda(idRecord) {
        fly01.confirm("Geração de Ordem de Venda", "Deseja realmente gerar a ordem de venda?", "fnGerarOrdemConfirmed(\"" + idRecord + "\")");
    }
    function fnGerarOrdemConfirmed(idRecord) {
        fly01.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("GerarOrdem", "OrdemServico")",
            dataType: 'json',
            data: { id: idRecord, faturar: false },
            success: function (data) {
                fly01.loading.stop();
                if (data.success) {
                    fly01.toast("Ordem de venda gerada!", "success");
                    fly01._.fly01dt.refresh();
                }
                else {
                    try {
                        var jsonMessage = JSON.parse(data.message);

                        jsonMessage.innerMessage.filter(x => ((x.dataField || "") == "")).forEach(element => {
                            fly01.toast(element.message, "error", 8000);
                        });
                    } catch (e) {
                        fly01.toast(data.message, "error");
                    }
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                fly01.loading.stop();
                fly01.toast(textStatus, "error");
            }
        });
    }
</script>