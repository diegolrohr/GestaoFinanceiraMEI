<script>

    function noComma(e) {
        return e.replace(',', '.');
    }

    function handleNegativeValues() {
        var formPedido = 'form#fly01mdlfrmPedidoItem ';

        if (parseFloat($(formPedido + 'input#valor').val()) < 0) {
            $(formPedido + 'input#valor').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formPedido + 'input#quantidade').val()) < 0) {
            $(formPedido + 'input#quantidade').val(function () { return (parseFloat(noComma(this.value)) * -1) });
        }
        if (parseFloat($(formPedido + 'input#desconto').val()) < 0) {
            $(formPedido + 'input#desconto').val(function () { return (parseInt(noComma(this.value)) * -1) });
        }
    }

    function errTotalNegativo(total) {
        var formPedido = 'form#fly01mdlfrmPedidoItem ';

        fly01.toast("O Desconto não pode ser maior ou igual a " + total + " reais.", 'error');

        $(formPedido + 'input#total').val(total);
        $(formPedido + 'input#desconto').val("");
    }

    function fnChangeTotal() {
        handleNegativeValues();

        var formPedido = 'form#fly01mdlfrmPedidoItem ';
        var valor = noComma($(formPedido + 'input#valor').val()), quantidade = noComma($(formPedido + 'input#quantidade').val()), desconto = noComma($(formPedido + 'input#desconto').val());

        if ((!valor) || (!quantidade)) {
            $(formPedido + 'input#total').val("");
            return;
        }

        var total = (parseFloat(quantidade) * parseFloat(valor));
        var totalDescontado = total - (!desconto ? 0 : parseFloat(desconto));

        if (totalDescontado > 0) {
            totalDescontado = totalDescontado.formatMoneyMask(2, 3, '', ',');
            $(formPedido + 'input#total').val(totalDescontado);
        }
        else {
            total = total.formatMoneyMask(2, 3, '', ',');
            errTotalNegativo(total);
        }
    }
</script>