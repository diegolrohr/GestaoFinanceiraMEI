<script>
    function fnSimular(event) {
        var capital = parseFloat(document.getElementById("valorRecebivel").value.toLocaleString("pt-BR"));

        $.ajax({
            url: '@Url.Action("AntecipacaoSimular", "Stone")',
            type: "GET",
            data: { valor: capital },
            success: function (data) {
                if (data.message) {
                    debugger;
                    $$$.loading.stop();
                    $$$.toast("", 'error');
                } else {
                    $("#liquidoAntecipavel").text(data.liquidoAnteciparCurrency);
                    $$$._.dtSimulacao.row.add({
                        capital: capital.toLocaleString("pt-BR", { minimumFractionDigits: 2, style: "currency", currency: "BRL" }),
                        liquido: data.liquidoAnteciparCurrency
                    }).draw();
                }
            },
        });
    }
</script>
