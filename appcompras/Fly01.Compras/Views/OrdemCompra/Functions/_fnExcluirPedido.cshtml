<script>
    function fnExcluirPedido(idRecord) {
        $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir este registro?", "fnExcluirPedidoConfirmed(\"" + idRecord + "\")");
}
function fnExcluirPedidoConfirmed(idRecord) {
    $('body').removeClass('loaded');
    if (idRecord) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("Delete","Pedido")",
            data: { id: idRecord },
            success: function (data) {
                $('body').addClass('loaded');
                if (data.success) {
                    $$$.toast("Excluído com sucesso.", "success");
                    $("input[value=\"" + idRecord + "\"]").parent().parent().remove();
                }
                else {
                    $$$.toast(data.message, "error");
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $('body').addClass('loaded');
                $$$.toast(textStatus, "error");
            }
        });
    }
}
</script>
