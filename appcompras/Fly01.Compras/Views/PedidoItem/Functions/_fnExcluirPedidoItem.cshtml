<script>
    function fnExcluirPedidoItem(idRecord) {
        $$$.confirm("Confirmar Exclusão", "Deseja realmente excluir este registro?", "fnExcluirPedidoItemConfirmed(\"" + idRecord + "\")");
    }
    function fnExcluirPedidoItemConfirmed(idRecord) {
        $('body').removeClass('loaded');
        if (idRecord) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete","PedidoItem")",
                data: { id: idRecord },
                success: function (data) {
                    $('body').addClass('loaded');
                    if (data.success) {
                        $$$.toast("Excluído com sucesso.", "success");
                        $$$._.dtPedidoItens.refresh();
                    }
                    else {
                        $$$.toast(data.message, "error");
                    }
                },
                error: function (jXHR, textStatus, errorThrown) {
                    $('body').addClass('loaded');
                    $$$.toast(textStatus, "error");
                }
            });
        }
    }
</script>