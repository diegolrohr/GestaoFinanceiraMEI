<script>
    function fnCancelarNFSe(idRecord) {
        $$$.confirm("Confirmar Cancelamento", "Deseja realmente cancelar esta nota fiscal?", "fnCancelarNFSeConfirmed(\"" + idRecord + "\")");
    }

    function fnCancelarNFSeConfirmed(idRecord) {
        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("Cancelar", "NFSe")?id=' + idRecord,
            type: "POST"
        })
        .done(function (data) {
            $$$.loading.stop();
            if (!data.success) {
                $$$.fn.submitErrorHandler(null, data.message);
            }
            else {
                $$$.toast(data.message, "success");
                $$$._.fly01dt.refresh();
            }
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
            $$$.toast(err, "error");
            $$$.loading.stop();
        });
    }
</script>