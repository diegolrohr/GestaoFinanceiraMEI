<script>
    @Html.Partial("Functions/_fnMain");

    function fnFormReadyOrdemServicoItemServico() {
        var id = $("form#fly01mdlfrmOrdemServicoItemServico input#id").val();

        if (id.length == 0) {
            $('form#fly01mdlfrmOrdemServicoItemServico input#ordemServicoId').val($('form#fly01frm input#id').val());            
        }

        $$$.fn.updateTextFields();
        fnOverrideSubmitOrdemServicoItemServico();

        $('form#fly01mdlfrmOrdemServicoItemServico input#valor').on('change', function () {
            fnChangeTotalServico();
        });
        $('form#fly01mdlfrmOrdemServicoItemServico input#desconto').on('change', function () {
            fnChangeTotalServico();
        });
        $('form#fly01mdlfrmOrdemServicoItemServico input#quantidade').on('change', function () {
            fnChangeTotalServico();
        });
    }

    function fnOverrideSubmitOrdemServicoItemServico() {
        var myForm = 'form#fly01mdlfrmOrdemServicoItemServico'

        $(myForm).off('submit');
        $(myForm).on('submit', function (e) {
            var that = $(myForm)

            if (!that.valid())
                return false;

            e.preventDefault();
            $$$.loading.start();
            var formData = that.serializeObject();
            $.ajax({
                type: that.attr("method"),
                contentType: 'application/json',
                dataType: 'json',
                url: that.attr("action"),
                data: JSON.stringify(formData),
                success: function (data) {
                    if (data.success) {
                        $$$.toast(data.message, "success");
                        $$$._.dtOrdemServicoItemServicos.refresh();
                        $$$._.fly01mdlfrmOrdemServicoItemServico.close()
                    } else {
                        $$$.loading.stop();
                        $$$.fn.submitErrorHandler(null, data.message);
                    }
                    $$$.loading.stop();
                },
                error: function error(jXHR, textStatus) {
                    $$$.toast(textStatus, "error");
                    $$$.loading.stop();
                }
            })
        });
    }

</script>