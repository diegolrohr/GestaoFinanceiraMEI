<script>
    function fnShowST() {
        if ($('#calculaSubstituicaoTributaria:checked').val() == "true") {
            $('input#aplicaFreteBaseST').removeAttr('disabled');
            $('input#aplicaIpiBaseST').removeAttr('disabled');
            $('input#aplicaDespesaBaseST').removeAttr('disabled');
        }
        else {            
            $('input#aplicaFreteBaseST').attr('disabled', 'disabled');
            $('input#aplicaIpiBaseST').attr('disabled', 'disabled');
            $('input#aplicaDespesaBaseST').attr('disabled', 'disabled');
        }
    }
</script>