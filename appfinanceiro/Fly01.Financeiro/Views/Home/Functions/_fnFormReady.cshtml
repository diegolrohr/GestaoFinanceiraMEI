<script>
    function __configsChart() {
        var simboloMonetario = " R$ ";

        fly01._.fly01chart.options.tooltips.callbacks.label = function (tooltipItems, data) {
            var formatedValue = __formatMoney(tooltipItems.yLabel);

            return simboloMonetario + formatedValue;
        }

        fly01._.fly01chart.options.scales.yAxes[0].ticks.userCallback = function (value, index, values) {
            var formatedValue = __formatMoney(value);

            return simboloMonetario + formatedValue;
        }

        fly01._.fly01chart.update();
    }

    function fnFormReady() {
        __configsChart();
        $("#btnMes").click();
    }
</script>