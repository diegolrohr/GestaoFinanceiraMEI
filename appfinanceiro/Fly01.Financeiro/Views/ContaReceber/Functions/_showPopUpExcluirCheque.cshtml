<script>
    function excluirCheque() {
        var result = false;

        var dataRow = {
            Id: $('#CreateOrEditCheque #RecordId').val(),
        }

        $.ajax({
            type: 'POST',
            url: '@Url.Action("DeleteCheque", "ContaReceber")',
            dataType: "json",
            contentType: "application/json",
            data: JSON.stringify(dataRow),
            success: function (data) {
                if (data.success) {
                    bootbox.hideAll();
                    $("#datatable-records").DataTable().ajax.reload(null, false);
                    ShowSuccess(data.message);
                } else {
                    ShowErrorGenerico("#CreateOrEditCheque", data.message);
                }
            }
        });

        return result;
    }
    function showPopUpExcluirCheque(id) {
        var tituloJanela = 'Excluir Cheque';

        $.ajax({
            data: { id: id },
            type: 'GET',
            url: '@Url.Action("DeleteCheque", "ContaReceber")',
            success: function (dataHtml) {
                bootbox.dialog({
                    title: tituloJanela,
                    message: dataHtml,
                    buttons: {
                        cancel: {
                            label: 'Cancelar',
                            className: 'button btn btn-default',
                        },
                        success: {
                            label: "Excluir",
                            className: "btn btn-primary",
                            callback: function () {
                                var result = excluirCheque();

                                return result;
                            }
                        }
                    }
                });
            }
        });
    }
</script>