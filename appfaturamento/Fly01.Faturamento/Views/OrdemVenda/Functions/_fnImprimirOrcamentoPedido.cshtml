<script>
    @Html.Partial("Functions/_fnImprimir");

    function fnImprimirOrcamentoPedido(idRecord) {
        $$$.loading.start();

        $.ajax({
            url: '@Url.Action("ImprimirOrcamentoPedido", "OrdemVenda")',
            data: { id: idRecord },
			type: "GET",
			success : function(data) {
			    $$$.loading.stop();
			    if (data.message) {
			        $$$.fn.submitErrorHandler(null, data.message);
			    } else {
			        fnImprimir(data.fileName);
			    }
			},
            error: function (jqxhr, textStatus, error) {
				var err = 'Ocorreu um erro na requisição: ' + textStatus + ", " + error;
				$$$.toast(err, "error");
				$$$.loading.stop();
			}
        });
    }
</script>
