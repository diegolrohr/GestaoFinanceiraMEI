<script>
    function fnAtualizarChart(value) {

        if (value === "1") {
            $('#chartStatusVlr').show();
            $('#chartStatusQtd').show();
            $('#chartPagamento').hide();
            $('#chartCategoria').hide();            
        }
        if (value === "2") {            
            $('#chartStatusVlr').hide();
            $('#chartStatusQtd').hide();
            $('#chartPagamento').show();
            $('#chartCategoria').hide();    
        }
        if (value === "3") {
            $('#chartStatusVlr').hide();
            $('#chartStatusQtd').hide();
            $('#chartPagamento').hide();
            $('#chartCategoria').show();    
        }
    }
</script>