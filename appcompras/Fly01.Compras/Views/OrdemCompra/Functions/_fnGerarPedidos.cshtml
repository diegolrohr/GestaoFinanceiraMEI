<script>
    function fnGerarPedidos(idRecord) {
        $$$.confirm("Confirmar Finalização", "Deseja realmente finalizar este orçamento e gerar os pedidos respectivos aos fornecedores? Não será mais possível editar/excluir", "fnFinalizarOrcamentoConfirmed(\"" + idRecord + "\")");
    }
    function fnFinalizarOrcamentoConfirmed(idRecord) {        
        $$$.loading.start();
        $.ajax({
            type: "POST",
            url: "@Url.Action("GerarPedidos", "Orcamento")",            
            dataType: 'json',
            data: { id: idRecord },
            success: function (data) {
                $$$.loading.stop();
                if (data.success) {
                    $$$.toast("Orçamento finalizado com sucesso", "success");
                    $$$._.fly01dt.refresh();
                }
                else {                    
                    $$$.fn.submitErrorHandler(null, data.message);
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(textStatus, "error");
            }
        });
    }
</script>