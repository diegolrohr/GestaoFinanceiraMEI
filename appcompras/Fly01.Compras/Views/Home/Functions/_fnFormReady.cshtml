<script>
    function refreshDash(updateDt) {
        fly01._.chartPagamento.refresh();
        fly01._.chartStatus.refresh();
        fly01._.chartCategoria.refresh();
        if (updateDt) {
            fly01._.mProd.refresh();
            fly01._.mForn.refresh();
        }
    }

    function fnFormReady() {
        let date = fly01._.mesPicker.pickamonth("picker").get("select");
        var firstDay = new Date(date.year, date.month, 1);
        $("#btnOrcamento").click();
        $("#dataInicial").val(moment(firstDay).format('YYYY-MM-DD'));
    }
</script>