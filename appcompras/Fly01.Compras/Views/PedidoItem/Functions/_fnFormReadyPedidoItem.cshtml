<script>
    @Html.Partial("Functions/_fnMain");

    function fnConfiguraTipoTributacaoICMSProduto() {
        var tipoTribICMS = $('form#fly01mdlfrmPedidoItem #grupoTributarioTipoTributacaoICMS').val();
        $('form#fly01mdlfrmPedidoItem #valorCreditoICMSField').hide();
        $('form#fly01mdlfrmPedidoItem #valorICMSSTRetidoField').hide();
        $('form#fly01mdlfrmPedidoItem #valorBCSTRetidoField').hide();
        $('form#fly01mdlfrmPedidoItem #valorBCFCPSTRetidoAnteriorField').hide();
        $('form#fly01mdlfrmPedidoItem #valorFCPSTRetidoAnteriorField').hide();
        
        //101 e 201 e 900
        if (tipoTribICMS == "TributadaComPermissaoDeCredito" || tipoTribICMS == "TributadaComPermissaoDeCreditoST" || tipoTribICMS == "Outros") {
            $('form#fly01mdlfrmPedidoItem #valorCreditoICMSField').show();
        }
        //500
        if (tipoTribICMS == "ICMSSubstituidoOuAntecipado") {
            $('form#fly01mdlfrmPedidoItem #valorICMSSTRetidoField').show();
            $('form#fly01mdlfrmPedidoItem #valorBCSTRetidoField').show();
            $('form#fly01mdlfrmPedidoItem #valorBCFCPSTRetidoAnteriorField').show();
            $('form#fly01mdlfrmPedidoItem #valorFCPSTRetidoAnteriorField').show();
        }
    }

    function fnFormReadyPedidoItem() {
        setNFERequiredFields("fly01mdlfrmPedidoItem", ["grupoTributarioDescricaoProduto", "valor"]);

        var id = $("form#fly01mdlfrmPedidoItem input#id").val();

        if (id.length == 0) {
            $('form#fly01mdlfrmPedidoItem input#pedidoId').val($('form#fly01frm input#id').val());
            $('form#fly01mdlfrmPedidoItem input#grupoTributarioIdProduto').val($('form#fly01frm input#grupoTributarioPadraoId').val());
            $('form#fly01mdlfrmPedidoItem input#grupoTributarioDescricaoProduto').val($('form#fly01frm input#grupoTributarioPadraoDescricao').val());
            $('form#fly01mdlfrmPedidoItem #grupoTributarioTipoTributacaoICMS').val($('form#fly01frm #grupoTributarioPadraoTipoTributacaoICMS').val());
        }
        fnConfiguraTipoTributacaoICMSProduto();

        $$$.fn.updateTextFields();
        fnOverrideSubmitPedidoItem();

        $('form#fly01mdlfrmPedidoItem input#valor').on('change', function () {
            fnChangeTotalProduto();
        });
        $('form#fly01mdlfrmPedidoItem input#desconto').on('change', function () {
            fnChangeTotalProduto();
        });
        $('form#fly01mdlfrmPedidoItem input#quantidade').on('change', function () {
            fnChangeTotalProduto();
        });
    }

    function fnSetNaturezaOperacao(idItem) {
        //adicionando o primeiro ou editando o único adicionado
        if (($$$._.dtPedidoItens.ajax.json().recordsTotal == 0 && idItem.length == 0) || ($$$._.dtPedidoItens.ajax.json().recordsTotal == 1 && idItem.length != 0)) {
            var cfopDescricao = $('input#cfopDescricao').val();
            $('input#naturezaOperacao').val(cfopDescricao.substring(0, (cfopDescricao.length > 60 ? 60 : cfopDescricao.length)));
            $$$.fn.updateTextFields();
        }
    }

    function fnOverrideSubmitPedidoItem() {
        var myForm = 'form#fly01mdlfrmPedidoItem'

        $(myForm).off('submit');
        $(myForm).on('submit', function (e) {
            var that = $(myForm)

            if (!that.valid())
                return false;

            e.preventDefault();
            $$$.loading.start();
            var formData = that.serializeObject();
            $.ajax({
                type: that.attr("method"),
                contentType: 'application/json',
                dataType: 'json',
                url: that.attr("action"),
                data: JSON.stringify(formData),
                success: function (data) {
                    if (data.success) {
                        fnSetNaturezaOperacao(formData.id);
                        $$$.toast(data.message, "success");
                        $$$._.dtPedidoItens.refresh();
                        $$$._.fly01mdlfrmPedidoItem.close();
                    } else {
                        $$$.loading.stop();
                        $$$.fn.submitErrorHandler(null, data.message);
                    }
                    $$$.loading.stop();
                    $('.modal-overlay').css('display', 'none');
                },
                error: function error(jXHR, textStatus) {
                    $$$.toast(textStatus, "error");
                    $$$.loading.stop();
                }
            })
        });
    }

</script>