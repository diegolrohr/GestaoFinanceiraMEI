<script>
    function fnFormReady() {
        $$$.loading.start();
        $.ajax({
            url: '@Url.Action("CarregaTemplate", "TemplateBoleto")',
            type: "GET",
            success: function (data) {
                $("input#id").val(data.id);
                $("input#assunto").val(data.assunto);
                $("#mensagem").val(data.mensagem);
                $$$.fn.updateTextFields();
                $$$.loading.stop();
            },
            error: function (jXHR, textStatus, errorThrown) {
                $$$.loading.stop();
                $$$.toast(data.message, 'error');
            }
        });
    }
</script>